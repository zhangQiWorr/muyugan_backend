# Muyugan 后端系统环境配置
# 复制此文件为 .env 并修改相应的配置值

# ==================== 应用配置 ====================
APP_NAME=Muyugan Backend
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ==================== 数据库配置 ====================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/muyugan_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ==================== Redis配置 ====================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ==================== JWT配置 ====================
JWT_SECRET_KEY=your-secret-key-here-please-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== 日志配置 ====================
CONSOLE_LOG_LEVEL=INFO
FILE_LOG_LEVEL=DEBUG
LOG_DIR=logs
LOG_MAX_FILE_SIZE=100
LOG_BACKUP_COUNT=10

# ==================== AI配置 ====================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
TAVILY_API_KEY=your-tavily-api-key-here
MAX_TOKENS=30000
MAX_SUMMARY_TOKENS=4096
AI_TEMPERATURE=0.7

# ==================== 文件上传配置 ====================
UPLOAD_DIR=static/uploads
MAX_FILE_SIZE=100
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,avi,mov,pdf,doc,docx
IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
VIDEO_EXTENSIONS=mp4,avi,mov,mkv,wmv

# ==================== 安全配置 ====================
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
RATE_LIMIT_PER_MINUTE=100
BCRYPT_ROUNDS=12

# ==================== 第三方服务配置 ====================
# 短信服务配置
SMS_PROVIDER=aliyun  # aliyun, tencent, huawei
SMS_ACCESS_KEY_ID=your-sms-access-key
SMS_ACCESS_KEY_SECRET=your-sms-secret
SMS_SIGN_NAME=your-sms-sign-name
SMS_TEMPLATE_CODE=your-sms-template-code

# 支付配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-alipay-private-key
ALIPAY_PUBLIC_KEY=your-alipay-public-key
WECHAT_APP_ID=your-wechat-app-id
WECHAT_MCH_ID=your-wechat-mch-id
WECHAT_API_KEY=your-wechat-api-key

# 邮件服务配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# ==================== 监控配置 ====================
# Prometheus配置
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ==================== 开发配置 ====================
# 仅在开发环境使用
RELOAD=true
LOG_LEVEL=DEBUG
SHOW_SQL=false
